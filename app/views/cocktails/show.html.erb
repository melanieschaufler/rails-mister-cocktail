<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<% @cocktail.doses.each do |dose| %>
  <ul>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to 'Delete', dose, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  </ul>
<% end %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :ingredient_id, as: :select, collection: @ingredients.order(:name) %>
  <%= f.input :description %>
  <%= f.submit %>
<% end %>

<%= link_to 'Delete Cocktail', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', cocktails_path %>

